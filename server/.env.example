# Environment Variables for SharePoint Integration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
JWT_SECRET=your_secure_jwt_secret_here_change_in_production

# Azure AD / Microsoft Graph Configuration
# Get these from Azure Portal > App Registrations
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# SharePoint Configuration
# Your SharePoint site URL
SHAREPOINT_SITE_URL=https://rightarcconsulting.sharepoint.com

# SharePoint site name format: domain:/sites/sitename
# If your site is at https://rightarcconsulting.sharepoint.com/sites/CentraPro
# Then use: rightarcconsulting.sharepoint.com:/sites/CentraPro
# If root site, use: rightarcconsulting.sharepoint.com
SHAREPOINT_SITE_NAME=rightarcconsulting.sharepoint.com:/sites/YourSiteName

# Optional: Email Configuration (for invoice sending)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@rightarcconsulting.com
SMTP_PASS=your_email_password
